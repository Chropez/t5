{{#if showDialog}}
  {{#paper-dialog fullscreen=fullscreen onClose=onCancel origin=dialogOrigin}}

    {{#paper-dialog-content}}
      <h2 class="md-title">New round</h2>
      {{paper-input label="Date" type="date" value=date onChange=(action (mut date))}}
    {{/paper-dialog-content}}

    {{#paper-dialog-actions class="layout-row"}}
      {{#paper-button onClick=onCancel}}Cancel{{/paper-button}}
      {{#paper-button raised=true primary=true onClick=(action "onSave")}}Create{{/paper-button}}
    {{/paper-dialog-actions}}

  {{/paper-dialog}}
{{/if}}
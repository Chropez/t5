{{#paper-toolbar class="md-whiteframe-5dp" as |toolbar|}}
  {{#toolbar.tools}}
    {{#if onBack}}
      <div class="flex">
        {{#paper-button iconButton=true onClick=onBack}}
          {{paper-icon "keyboard backspace" }}
        {{/paper-button}}
      </div>
    {{else}}
      <div class="flex"></div>
    {{/if}}

    <h2>{{title}}</h2>
    {{#if hasBlock}}
      {{yield}}
    {{else}}
      <div class="flex"></div>
    {{/if}}
  {{/toolbar.tools}}
{{/paper-toolbar}}

